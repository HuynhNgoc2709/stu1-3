// Lấy thẻ div có id là "ldApGm"
const divElement = document.getElementById("ldApGm");

// Lấy tất cả các thẻ a href trong thẻ div
const links = divElement.getElementsByTagName("a");

// Lặp qua từng thẻ a href
for (let i = 0; i < links.length; i++) {
  const link = links[i];

  // Lấy liên kết của thẻ a href
  const url = link.href;

  // Chuyển liên kết thành một hàm mở liên kết bằng tab mới
  link.href = "javascript:void(0);";
  link.setAttribute("onclick", `window.open('${url}', '_blank');`);
}
